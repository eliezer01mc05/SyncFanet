%global:

using namespace inet::ieee80211;

class DataFs : public IFrameSequence 
{
    protected:
        int firstStep = -1;
        int step = -1;

    public:
        virtual void startSequence(FrameSequenceContext *context, int firstStep) override {
            this->firstStep = firstStep;
            step = 0;
        }

        virtual IFrameSequenceStep *prepareStep(FrameSequenceContext *context) override {
            switch (context->role) {
                case FrameSequenceContext::Role::ORIGINATOR: {
                    switch (step) {
                        case 0: {
                            Ieee80211Frame *frame = new Ieee80211Frame("DATA");
                            frame->setType(ST_DATA);
                            return new TransmitStep(frame, 0);
                        }
                        case 1:
                            return nullptr;
                        default:
                            throw cRuntimeError("Unknown step");
                    }
                }
                case FrameSequenceContext::Role::RECIPIENT: {
                    switch (step) {
                        case 0:
                            return new ReceiveStep();
                        case 1:
                            return nullptr;
                        default:
                            throw cRuntimeError("Unknown step");
                    }
                }
                default:
                    throw cRuntimeError("Unknown frame sequence role");
            }
        }

        virtual StepCompletion completeStep(FrameSequenceContext *context) override {
            switch (context->role) {
                case FrameSequenceContext::Role::ORIGINATOR: {
                    switch (step) {
                        case 0:
                            step++;
                            return StepCompletion::ACCEPT;
                        default:
                            throw cRuntimeError("Unknown step");
                    }
                }
                case FrameSequenceContext::Role::RECIPIENT: {
                    switch (step) {
                        case 0: {
                            IReceiveStep *receiveStep = check_and_cast<IReceiveStep *>(context->getStep(firstStep + step));
                            step++;
                            return receiveStep->getReceivedFrame()->getType() == ST_DATA ? StepCompletion::ACCEPT : StepCompletion::REJECT;
                        }
                        default:
                            throw cRuntimeError("Unknown step");
                    }
                }
                default:
                    throw cRuntimeError("Unknown frame sequence role");
            }
        }
};

